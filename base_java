package composite_design_pattern;

public class base {

	public static void main(String[] args) {
		Scanner scan= new Scanner(System.in);
		
		System.out.println("Numar de obiecte publice: ");
		int text1= scan.nextInt();
		
		System.out.println("Numar de obiecte personale: ");
		int text2= scan.nextInt();

		System.out.println("Numar de obiecte autobuz: ");
		int text3= scan.nextInt();

		System.out.println("Numar de obiecte bicicleta: ");
		int text4= scan.nextInt();
		
	Autobuz bus1 = new Autobuz(10, "xyz"); 
	     Autobuz bus2 = new Autobuz(101, "zzz"); 
	        Publice pub= new Publice(); 
	        pub.add(bus1); 
	        pub.add(bus2); 
	        pub.print();
	        Bicicleta bike1 = new Bicicleta(20, "abc"); 
		    Bicicleta bike2 = new Bicicleta(202, "ccc"); 
		        Personale per= new Personale(); 
		        per.add(bike1); 
		        per.add(bike2); 
		        pub.print();
		        
	}

}
